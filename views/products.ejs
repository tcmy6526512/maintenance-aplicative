<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produits - Mini Site Web</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1>üõí Mini Site Web</h1>
            <div class="nav-links">
                <a href="/">Accueil</a>
                <a href="/products">Produits</a>
                <a href="/categories">Cat√©gories</a>
                <a href="/auth/logout">D√©connexion (<%=user.username%>)</a>
            </div>
        </div>
    </nav>

    <div class="container main-content">
        <h2>Liste des produits</h2>

        <!-- Navigation par cat√©gorie -->
        <div class="form-card">
            <h3>üóÇÔ∏è Cat√©gories</h3>
            <div style="display:flex; flex-wrap:wrap; gap:.5rem;">
                <a class="btn btn-secondary btn-sm" href="/products">Toutes</a>
                <% if (categories && categories.length) { %>
                    <% categories.forEach(category => { %>
                        <a class="btn btn-secondary btn-sm" href="/products?<%='category=' + category.id%>">
                            <%= (category.icon ? category.icon + ' ' : '') + category.name %> (<%=category.product_count%>)
                        </a>
                    <% }); %>
                <% } %>
            </div>
        </div>

        <% if (user.role === 'admin') { %>
            <!-- Formulaire d'ajout -->
            <div class="form-card">
                <h3>‚ûï Ajouter un produit</h3>
                <form action="/products/add" method="POST" class="product-form">
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    <div class="form-group">
                        <label for="name">Nom du produit</label>
                        <input type="text" id="name" name="name" required>
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="description" name="description" rows="3" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="price">Prix (‚Ç¨)</label>
                        <input type="number" id="price" name="price" step="0.01" required>
                    </div>

                    <div class="form-group">
                        <label for="category_id">Cat√©gorie</label>
                        <select id="category_id" name="category_id">
                            <option value="">(Aucune)</option>
                            <% if (categories && categories.length) { %>
                                <% categories.forEach(category => { %>
                                    <option value="<%=category.id%>">
                                        <%= (category.icon ? category.icon + ' ' : '') + category.name %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">Ajouter</button>
                </form>
            </div>
        <% } else { %>
            <div class="hint-box">
                <p>üîí Seul un administrateur peut ajouter, modifier ou supprimer des produits.</p>
            </div>
        <% } %>

        <!-- Liste des produits -->
        <div class="products-grid">
            <% if (products.length === 0) { %>
                <p class="no-products">Aucun produit disponible. Ajoutez-en un!</p>
            <% } else { %>
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <h3><%=product.name%></h3>
                        <% if (product.category_name) { %>
                            <p style="margin:.25rem 0; opacity:.85;">
                                <strong>Cat√©gorie:</strong> <%= (product.category_icon ? product.category_icon + ' ' : '') + product.category_name %>
                            </p>
                        <% } %>
                        <p class="product-description"><%=product.description%></p>
                        <p class="product-price"><%=product.price%> ‚Ç¨</p>

                        <% if (user.role === 'admin') { %>
                            <!-- Formulaire de modification -->
                            <details>
                                <summary class="btn btn-warning btn-sm">Modifier</summary>
                                <form action="/products/update/<%=product.id%>" method="POST" class="edit-form">
                                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                    <input type="text" name="name" value="<%=product.name%>" required>
                                    <textarea name="description" required><%=product.description%></textarea>
                                    <input type="number" name="price" value="<%=product.price%>" step="0.01" required>
                                    <select name="category_id">
                                        <option value="">(Aucune)</option>
                                        <% if (categories && categories.length) { %>
                                            <% categories.forEach(category => { %>
                                                <option value="<%=category.id%>" <%= (product.category_id === category.id ? 'selected' : '') %>>
                                                    <%= (category.icon ? category.icon + ' ' : '') + category.name %>
                                                </option>
                                            <% }); %>
                                        <% } %>
                                    </select>
                                    <button type="submit" class="btn btn-warning btn-sm">Enregistrer</button>
                                </form>
                            </details>

                            <!-- Formulaire de suppression -->
                            <form action="/products/delete/<%=product.id%>" method="POST" style="display: inline;">
                                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Supprimer ce produit?')">Supprimer</button>
                            </form>
                        <% } %>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <footer>
        <p>¬© 2026 Mini Site Web - Projet de d√©monstration</p>
    </footer>
</body>
</html>
